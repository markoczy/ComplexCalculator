package mkz.cc.launch;

import java.util.Scanner;

import mkz.cc.core.debug.CCalcException;
import mkz.cc.core.parser.EquationParser;
import mkz.cc.core.parser.FunctionParser;
import mkz.cc.util.IO;

public class CCalcSimpleCLI
{

	public static void main(String[] args)
	{
		if(args.length>0)
		{
			String lCall = new String();
			
			for(String iArg:args)
			{
				lCall+=iArg;
			}
			lCall.replaceAll(" ", "");
			
			try
			{
				System.out.println("Output: "+new EquationParser().parse(lCall));
			}
			catch (CCalcException e)
			{
				IO.SysOutE(e);
			}
		}
		else
		{
			_initCLI();
		}
	}
	
	private static void _initCLI()
	{
		Scanner lScanner = new Scanner(System.in);
		EquationParser lEqParser = new EquationParser();
		FunctionParser lFcnParser = new FunctionParser();
		
		System.out.println("+----------------------------------------------------------+");
		System.out.println("|  ComplexCalculator V0.7 (Java test CLI)   Author: A.M.   |");
		System.out.println("|                                                          |");
		System.out.println("|  Source: https://github.com/markoczy/ComplexCalculator   |");
		System.out.println("+----------------------------------------------------------+");
		System.out.println();
		
		System.out.print("Input : ");
		String lInput = lScanner.nextLine();
		
		while(!lInput.toLowerCase().equals("/exit"))
		{
			if(lInput.contains(":="))
			{
				System.out.println(lFcnParser.parseFunction(lInput)?">>>>> : Succesfully added function" : ">>>>> : Error while adding function");
				System.out.println();
			}
			else
			{
				try
				{
					double lVal=lEqParser.parse(lInput);
					System.out.println("Output: "+lVal);
					System.out.println();
				}
				catch (CCalcException e)
				{
					IO.SysOutE(e);
				}
			}
			
			
			System.out.print("Input : ");
			lInput=lScanner.nextLine();
		}
		
		lScanner.close();
		
	}

}
